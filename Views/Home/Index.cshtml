@{
    ViewData["Title"] = "Home Page";
}
@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-dark">Hola, @ViewBag.NombreUsuario!</h1>
            <p class="lead text-muted">Este es el resumen de tu turno hoy.</p>
        </div>
    </div>

    @if (ViewBag.ErrorSQL != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorSQL</div>
    }

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white p-3">
                <div class="card-body">
                    <h6 class="text-uppercase small fw-bold">Mi Recaudación</h6>
                    <h2 class="display-6 fw-bold">$@ViewBag.TotalVentasPropio</h2>
                    <i class="bi bi-currency-dollar position-absolute top-0 end-0 m-3 opacity-25" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white p-3">
                <div class="card-body">
                    <h6 class="text-uppercase small fw-bold">Salón (Mesas Ocupadas)</h6>
                    <h2 class="display-6 fw-bold">@ViewBag.MesasOcupadas</h2>
                    <i class="bi bi-grid-3x3-gap position-absolute top-0 end-0 m-3 opacity-25" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-dark text-white p-3">
                <div class="card-body">
                    <h6 class="text-uppercase small fw-bold">Más Vendido Hoy</h6>
                    <h3 class="fw-bold">@ViewBag.ProductoEstrella</h3>
                    <i class="bi bi-star-fill position-absolute top-0 end-0 m-3 text-warning opacity-50" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>
    </div>
</div>